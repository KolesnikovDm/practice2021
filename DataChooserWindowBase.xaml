<Window x:Class="WpfApp.DataChooserWindowBase"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp"
        mc:Ignorable="d"
        Title="DataChooserWindowBase" Height="450" Width="250" ResizeMode="NoResize">

    <Window.Background>Silver</Window.Background>

    <Grid>
        <ListBox x:Name="_listBox" x:FieldModifier="protected" Width="230" Height="379" SelectionMode="Multiple" Margin="10,10,10,45"/>
        <Button x:Name="_acceptButton" x:FieldModifier="protected" Content="Принять" Width="100" Height="30" Click="OnAcceptButtonClick" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,10,10"/>
    </Grid>
</Window>
