<local:DataCreatorBaseWindow
        x:TypeArguments="local:Subject"
        x:Class="WpfApp.SubjectCreatorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp"
        mc:Ignorable="d"
        Title="SubjectCreatingWindow" Height="140" Width="300" ResizeMode="NoResize" Background="#FFB9ABFF">
    
    <Grid >
        <TextBox x:Name="_name" VerticalContentAlignment="Center" HorizontalAlignment="Center" TextWrapping="Wrap" VerticalAlignment="Top" Width="180" Height="25" Margin="0,30,0,0"/>
        <Label Content="Название" HorizontalContentAlignment="Center" HorizontalAlignment="Center" VerticalAlignment="Top" Height="25" Width="180"/>
        <Button Content="Добавить" HorizontalAlignment="Right" VerticalAlignment="Bottom" Width="110" Click="OnAddButtonClick" Height="20" Margin="0,0,10,10"/>

    </Grid>
</local:DataCreatorBaseWindow>
